generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id    String @id @default(cuid())
  email String @unique
  name  String @unique
  menus Menu[]
}

model Menu {
  id           String     @id @default(cuid())
  title        String
  description  String?
  restarurant  Restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId String
  Products     Products[]

  @@unique([title, restaurantId])
}

model Products {
  id          String  @id @default(cuid())
  title       String
  description String?
  section     String
  price       Float   @default(1)
  menu        Menu    @relation(fields: [menuId], references: [id])
  menuId      String
  published   Boolean @default(true)
}
