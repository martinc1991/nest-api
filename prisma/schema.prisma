generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id    String @id @default(cuid())
  email String @unique
  name  String @unique
  menus Menu[]
}

model Menu {
  id           String     @id @default(cuid())
  title        String
  description  String?
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId String
  Products     Product[]

  @@unique([title, restaurantId])
}

model Product {
  id          String   @id @default(cuid())
  title       String
  description String?  @default("")
  section     String?  @default("")
  price       Float
  menu        Menu     @relation(fields: [menuId], references: [id])
  menuId      String
  published   Boolean? @default(true)
}
